<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="nConnectionMaker" class="toby31.springbook.chapter1.ch1_11_2.user.dao.NConnectionMaker"/>
    <bean id="dConnectionMaker" class="toby31.springbook.chapter1.ch1_11_2.user.dao.DConnectionMaker"/>

    <bean id="countingConnectionMaker" class="toby31.springbook.chapter1.ch1_11_2.user.dao.CountingConnectionMaker">
        <property name="countingConnectionMaker" ref="nConnectionMaker"/>
    </bean>

    <bean id="userDao" class="toby31.springbook.chapter1.ch1_11_2.user.dao.UserDao">
        <property name="connectionMaker" ref="countingConnectionMaker"/>
    </bean>
</beans>